<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>x1.maven</groupId>
  <artifactId>jira-maven-plugin-test</artifactId>
  <version>1.0.0-SNAPSHOT</version>

  <build>
    <plugins>
      <plugin>
        <groupId>x1.maven</groupId>
        <artifactId>jira-maven-plugin</artifactId>
        <version>1.0.0-SNAPSHOT</version>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>ac1</id>
      <build>
        <plugins>
          <plugin>
            <groupId>x1.maven</groupId>
            <artifactId>jira-maven-plugin</artifactId>
            <configuration>
              <stage>ac1</stage>
              <name>test</name>
              <version>1.2.3</version>
              <deployments>
                <deployment>
                  <groupId>com.example</groupId>
                  <artifactId>test-gui</artifactId>
                  <version>1.0.0-SNAPSHOT</version>
                  <name>test-gui.ear</name>
                  <type>ear</type>
                  <servers>test1.example.com,test2.example.com</servers>
                  <slot>0</slot>
                </deployment>
                <deployment>
                  <groupId>com.example</groupId>
                  <artifactId>test-war</artifactId>
                  <version>1.2.3</version>
                  <name>test-v1.2.war</name>
                  <type>war</type>
                  <servers>test1.example.com,test2.example.com</servers>
                  <slot>1</slot>
                </deployment>
              </deployments>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>prod</id>
      <build>
        <plugins>
          <plugin>
            <groupId>x1.maven</groupId>
            <artifactId>jira-maven-plugin</artifactId>
            <configuration>
              <stage>prod</stage>
              <name>test-v1.2.war</name>
              <version>1.2.3</version>
              <groupId>com.example</groupId>
              <artifactId>test-war</artifactId>
              <type>war</type>
              <servers>test3.example.com</servers>
              <slot>1</slot>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>x1</id>
      <build>
        <plugins>
          <plugin>
            <groupId>x1.maven</groupId>
            <artifactId>jira-maven-plugin</artifactId>
            <configuration>
              <stage>x1</stage>
              <name>stomp-test-v1.4.war</name>
              <version>1.4.0-SNAPSHOT</version>
              <groupId>x1.jboss</groupId>
              <artifactId>stomp-test</artifactId>
              <type>war</type>
              <servers>xanadu.x1</servers>
              <slot>0</slot>
              <labels>wildfly,test</labels>
              <reporter>admin</reporter>
              <assignee>admin</assignee>
              <links>EXAMPLE-9</links>
              <watchers>admin</watchers>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>

  </profiles>
</project>
